<div
  style="max-width: 400px;  margin: 20px auto; padding: 20px; border-radius: 8px; box-shadow: 2px 5px 20px rgba(0, 0, 0, 0.2); background-color: transparent; margin-bottom:5rem; margin-top:5rem;">

  <form action="/register" method="post" style="display: flex;flex-direction: column;">
<h1>Register</h1>
    <input name="name" required="true" type="text"
      style="padding: 10px; margin-bottom: 15px; background-color: transparent; border-radius: 4px; border: 1px solid #ccc; transition: border-color 0.3s ease-in-out;"
      placeholder="Your Name">

    <input name="password" required="true" type="password"
      style="padding: 10px; margin-bottom: 15px; background-color: transparent; border-radius: 4px; border: 1px solid #ccc; transition: border-color 0.3s ease-in-out;"
      placeholder="Your Password">



    <input class="a" type="submit" value="Submit" required="true" style="background-color: #3498db; color: #fff; border: none; padding: 10px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s ease-in-out;
     ">


  </form>
    <p style="padding-top:1rem">if you are already registered , <a href="/login" style="color:rgb(85, 85, 255)">Login
        here</a></p>

  <p style="color:red ;padding:1rem;">{{this.errorMessage}}</p>

</div>